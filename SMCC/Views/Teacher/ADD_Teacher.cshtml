<div>
    <div>
        <div>
            @model SMCC.Models.Teacher
            @{
                ViewBag.Title = "ADD_Teacher";
                Layout = "~/Views/MainLayout.cshtml";
            }

            <!-- Content Wrapper. Contains page content -->
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>Add new teacher</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="/AdminDashBoard/Home">Home</a></li>
                                <li class="breadcrumb-item active">Add teacher</li>
                            </ol>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>
            @using (Html.BeginForm("ADD_Teacher", "Teacher", FormMethod.Post))
            {
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title" style="float:right">بيانات المدرس</h3>
                            </div>
                            <div class="card-body" dir="rtl">

                                <div class="form-group">

                                    <label style="float:right">اسم المدرس</label>
                                    @Html.ValidationMessageFor(model => model.TeacherName, null, new { @style = "color:red" })

                                    @Html.TextBoxFor(model => model.TeacherName, new { @class = "form-control" })



                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.teacherPhoneNumber, "رقم التليفون", new { @style = "float:right" })
                                    @Html.ValidationMessageFor(model => model.teacherPhoneNumber, null, new { @style = "color:red" })

                                    @Html.TextBoxFor(model => model.teacherPhoneNumber, new { @class = "form-control" })




                                </div>

                            </div>
                            <div class="card-footer">

                                <input type="submit" class="btn btn-primary" name="save" value="تسجيل">

                            </div>
                        </div>



                    </div>
                </div>
                if (ViewBag.Message != null)
                {
                    <script type="text/javascript">

                                           window.onload = function () {
                                              alert("@ViewBag.Message");
                                           };
                    </script>
                }

            }


        </div>
    </div>
