@model SMCC.Models.User
@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/FrontEnd/dist/img/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/FrontEnd/dist/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/FrontEnd/dist/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/FrontEnd/dist/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/FrontEnd/dist/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/FrontEnd/dist/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/FrontEnd/dist/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/FrontEnd/dist/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/FrontEnd/dist/img/img-01.png" alt="IMG">
                </div>
                @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "login100-form validate-form" }))
                {
                    @*<form class="login100-form validate-form">*@
                    <span class="login100-form-title">
                        Login
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">

                        <input class="input100" type="text" name="email" placeholder="Email">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>

                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input class="input100" type="password" name="pass" placeholder="Password">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="container-login100-form-btn">
                        <input type="submit" class="login100-form-btn" value="Login" />


                    </div>

                    <div class="text-center p-t-12">

                        <a class="txt2" href="https://www.facebook.com/peter.ezzat.923">
                            Contact Me
                        </a>
                    </div>
                    if (ViewBag.Message != null)
                    {
                        <script type="text/javascript">

                                           window.onload = function () {
                                              alert("@ViewBag.Message");
                                           };
                        </script>
                    }


                }
                @*</form>*@
            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/FrontEnd/dist/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/FrontEnd/dist/vendor/bootstrap/js/popper.js"></script>
    <script src="~/FrontEnd/dist/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/FrontEnd/dist/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/FrontEnd/dist/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
		$('.js-tilt').tilt({
			scale: 1.1
		})
    </script>
    <!--===============================================================================================-->
    <script src="~/FrontEnd/dist/js/main.js"></script>

</body>
</html>