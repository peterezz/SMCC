<div>
    <div>
        <div>
            @model IEnumerable<SMCC.Models.CourseAppointment>
            @{

                Layout = null;
            }



            @if (ViewBag.Message != null)

            {
               <h5 style="color:red;float:right"> @ViewBag.Message</h5>
                

            }
            else
            {




                <!-- /.row -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-primary" >

                            <!-- /.card-header -->




                            <div class="card-body table-responsive p-0">
                                <table class="table table-hover text-nowrap" dir="rtl">
                                    <tr>
                                        <th>تسجل طالب</th>



                                        <th>المبلغ</th>
                                        <th>المدرس</th>
                                        <th>القاعة</th>
                                        <th>الايام</th>
                                        <th>المواعيد</th>
                                        <th>الفترة</th>
                                        <th>اسم الكورس</th>
                                    </tr>
                                    <tbody>
                                        @if (Model.Count() == 0)
                                        {


                                            <h4 style="float:right;color:red;padding-right:10px">لا يوجد سجل لهذا الموعد</h4>
                                        }
                                        else
                                        {
                                            foreach (var item in Model)
                                            {

                                                <tr>
                                                    <td><a href="/Student/RegisterCourse/@item.AppointmentID">تسجيل طالب</a></td>


                                                    <td>@item.price</td>


                                                    <td>
                                                        @item.Teacher.TeacherName
                                                    </td>
                                                    <td>@item.Class.ClassName</td>

                                                    <td>
                                                        @item.day1 _ @item.day2 _ @item.day3

                                                    </td>
                                                    <td>
                                                        من
                                                        @item.startTime
                                                        الى
                                                        @item.endTime
                                                    </td>
                                                    <td>
                                                        @item.endDate.Value.Day/@item.endDate.Value.Month/@item.endDate.Value.Year
                                                        -
                                                        @item.startDate.Value.Day/@item.startDate.Value.Month/@item.startDate.Value.Year


                                                    </td>
                                                    <td>@item.Cours.CourseName</td>












                                                </tr>

                                            }
                                        }
                                        


                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">

                                <a style="text-decoration:none;float:right" href="/Course/ScheduleCourse" for="click" class="btn btn-primary">تسجيل موعد جديد</a>
                            </div>
                        </div>
                    </div>
                </div>

            }

            </div>
        </div>
    </div>